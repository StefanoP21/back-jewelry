enum Role {
  ADMIN
  USER
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  lastName  String
  dni       String    @unique
  password  String
  role      Role[]    @default([USER])
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
}

model Customer {
  id        Int       @id @default(autoincrement())
  name      String
  lastName  String
  email     String
  dni       String    @unique
  phone     String
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
}
